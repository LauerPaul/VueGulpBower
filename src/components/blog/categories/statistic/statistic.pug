v-card.statistic(light, disabled, width="160px", color="blue-grey", dark)
	v-list-tile
		v-list-tile-content
			strong {{ text.full }}
		v-list-tile-content.align-end
			v-progress-circular(v-if="loading", indeterminate, color="white", :width="2", :size="20")
			span(v-else) {{ statistics.full }}
	v-list-tile
		v-list-tile-content
			strong {{ text.clear }}
		v-list-tile-content.align-end
			v-progress-circular(v-if="loading", indeterminate, color="white", :width="2", :size="20")
			span(v-else) {{ statistics.clear }}
	v-list-tile
		v-list-tile-content
			strong {{ text.on }}
		v-list-tile-content.align-end
			v-progress-circular(v-if="loading", indeterminate, color="white", :width="2", :size="20")
			span(v-else) {{ statistics.on }}
	v-list-tile
		v-list-tile-content
			strong {{ text.off }}
		v-list-tile-content.align-end
			v-progress-circular(v-if="loading", indeterminate, color="white", :width="2", :size="20")
			span(v-else) {{ statistics.off }}